{
    "AllowedHosts": "*",
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Yarp": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "ReverseProxy": {
      "Routes": {
        "commerce-route": {
          "ClusterId": "commerce",
          "Match": {
            "Path": "/graphql",
            "Hosts": ["localhost"]
          }
        },
        "capture-context-route": {
          "ClusterId": "commerce",
          "Match": {
            "Path": "/rest/V1/{**catch-all}",
            "Hosts": ["localhost"]
          }
        },
        "evident-route": {
          "ClusterId": "evident",
          "Match": {
            "Path": "{**catch-all}",
            "Hosts": ["localhost"]
          }
        }
      },
      "Clusters": {
        "evident": {
          "Destinations": {
            "main": {
              "Address": "http://localhost:3000"
            }
          }
        },
        "commerce": {
          "HttpClient": {
            "DangerousAcceptAnyServerCertificate": "true"
          },
          "Destinations": {
            "main": {
              "Address": "https://mcstaging.commerce.evidentscientific.com/"
            }
          }
        }
      }
    }
  }