{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Yarp": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "commerce-route": {
        "ClusterId": "commerce",
        "Match": {
          "Path": "/graphql",
          "Hosts": ["localhost"]
        }
      },
      "evident-route": {
        "ClusterId": "evident",
        "Match": {
          "Path": "{**catch-all}",
          "Hosts": ["localhost"]
        }
      }
    },
    "Clusters": {
      "evident": {
        "Destinations": {
          "main": {
            "Address": "http://localhost:3000"
          }
        }
      },
      "commerce": {
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": "true"
        },
        "Destinations": {
          "main": {
            "Address": "https://mcstaging.commerce.evidentscientific.com"
          }
        }
      }
    }
  }
}
